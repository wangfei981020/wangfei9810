git clone https://git.ffmpeg.org/ffmpeg.git ffmpeg
dnf install gcc gcc-c++ make cmake -y
dnf install automake autoconf -y 
./configure --prefix=/usr/local/ffmpeg --disable-x86asm
make && make install
ln -s /usr/local/ffmpeg/bin/ffmpeg /usr/bin/ffmpeg
ln -s /usr/local/ffmpeg/bin/ffprobe /usr/bin/ffprobe




yum install -y https://download1.rpmfusion.org/free/el/rpmfusion-free-release-7.noarch.rpm
yum install -y ffmpeg ffmpeg-devel
ffmpeg -version


dnf install -y https://download1.rpmfusion.org/free/el/rpmfusion-free-release-9.noarch.rpm
dnf install -y https://download1.rpmfusion.org/nonfree/el/rpmfusion-nonfree-release-9.noarch.rpm

dnf clean all
dnf makecache
dnf install -y ffmpeg ffmpeg-devel
